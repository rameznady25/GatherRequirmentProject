@model Gather_Requirement_Project.Models.UserStories

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="card mb-3">
        <div class="card-header">
            <h4> <i class="fa fa-desktop" aria-hidden="true"></i>&nbsp&nbsp Edit User Story </h4>
        </div>
        <div class="card-body" style="">

            <hr />

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        <input type="hidden" asp-for="ScreenID" class="form-control" />

                        <div class="form-group">
                            <label asp-for="Requirement" class="control-label"></label>
                            <textarea asp-for="Requirement" class="form-control"> </textarea>
                            <span asp-validation-for="Requirement" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserStory" class="control-label"></label>
                            <textarea asp-for="UserStory" class="form-control"></textarea>
                            <span asp-validation-for="UserStory" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index" asp-route-screenId="@Model.ScreenID">Back to List</a>
            </div>

        </div>
    </div>
</div>
