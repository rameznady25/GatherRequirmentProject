@model IEnumerable<Gather_Requirement_Project.Models.Portal>

@{
    ViewData["Title"] = "Index";
    int var = 1;

}


<div class="container-fluid">
    <div class="card mb-3">
        <div class="card-header">
            <h4> <i class="fa fa-desktop" aria-hidden="true"></i>&nbsp&nbsp Portal </h4>
        </div>
        <div class="card-body" style="">
            <div class="row">
                <div class="col-md-10">
                    <a asp-action="Create">Create New</a>
                </div>
                <div class="col-md-2">
                </div>
            </div>
            <hr />



            <table class="table  table-responsive">
                <thead>
                    <tr>
                        <th>
                            <span>#</span>
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.EnglishName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ArabicName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MainPortal)
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @var
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnglishName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArabicName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MainPortal.ArabicName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                        var = var + 1;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).scroll(function () {
        localStorage['page'] = document.URL;
        localStorage['scrollTop'] = $(document).scrollTop();
    });

    $(document).ready(function () {
        if (localStorage['page'] == document.URL) {
            $(document).scrollTop(localStorage['scrollTop']);
        }
    });
</script>

