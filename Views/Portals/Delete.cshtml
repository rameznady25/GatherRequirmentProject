@model Gather_Requirement_Project.Models.Portal

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="card mb-3">
        <div class="card-header">
            <h4> <i class="fa fa-desktop" aria-hidden="true"></i>&nbsp&nbsp Portal </h4>
        </div>
        <div class="card-body" style="">
            <div class="row">
                <div class="col-md-10">
                    <h3>Are you sure you want to delete this?</h3>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
            <hr />


            <div>
                <h4>Portal</h4>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.EnglishName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.EnglishName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ArabicName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ArabicName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.MainPortal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.MainPortal.ArabicName)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                </form>
            </div>
        </div>
    </div>
</div>
